{
  "compilerOptions": {
    "target": "es6",
    "outDir": "build",
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": false,

    "strict": true,

    "baseUrl": "./",
    "paths": {
      "*": [
        "./src/@types/*",
        "*"
      ]
    }
  },
  "include": [ "src/**/*.ts" ],
  "exclude": [ "node_modules/**", "build" ]
}