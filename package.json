{
  "scripts": {
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"packages/**/*.ts\" --write",
    "fix:tslint": "lerna exec -- tslint --fix -p .",
    "test": "run-s build test:*",
    "test:lint": "prettier \"packages/**/*.ts\" --list-different && lerna exec -- tslint -p .",
    "test:unit": "./scripts/test.js",
    "test:unit:watch": "./scripts/test.js --watch",
    "test:security": "npm audit && lerna exec -- npm audit",
    "build": "run-s build:*",
    "build:proto": "lerna run build:proto",
    "build:main": "lerna run build:main"
  },
  "devDependencies": {
    "@shingo/tslint-rules": "^1.0.1",
    "@types/jest": "^23.3.2",
    "jest": "^23.6.0",
    "lerna": "^3.3.2",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.2",
    "trash-cli": "^1.4.0",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.3"
  }
}
