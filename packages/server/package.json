{
  "name": "@shingo/sf-api-server",
  "version": "1.0.0-beta.0",
  "description": "Shingo salesforce api server",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shingoinstitute/shingo-sf-api.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "sf-api-server": "./app.js"
  },
  "scripts": {
    "start": "node ./build/app.js",
    "debug": "nodemon --watch ./build --inspect=0.0.0.0:9229 --nolazy ./build/app.js",
    "docker-debug": "docker-compose -f docker-compose.debug.yml up",
    "build": "run-s clean && run-p build:*",
    "build:proto": "mkdir -p build/proto && cp -R ../../proto build/",
    "build:main": "tsc -b .",
    "clean": "trash build test docs",
    "prepack": "npm run build && cp -Rav build/* . | ../../scripts/parseEmitted.sh build.emit",
    "postpack": "../../scripts/postpack.sh"
  },
  "author": "Abraham White <abelincoln.white@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@grpc/proto-loader": "^0.3.0",
    "@shingo/sf-api-shared": "1.0.0-beta.0",
    "grpc": "^1.15.0",
    "jsforce": "^1.9.1",
    "lodash": "^4.17.11",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/jsforce": "^1.8.16",
    "@types/lodash": "^4.14.116",
    "@types/node": "^10.9.4",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "trash-cli": "^1.4.0",
    "typescript": "^3.0.3"
  }
}
